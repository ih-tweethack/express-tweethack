<div class="border border-top-0 border-start-0 border-end-0 py-4">
  <div class="d-flex gap-3">
    <div class="flex-shrink-0 rounded-circle overflow-hidden d-flex justify-content-center align-items-center" style="width: 60px; height: 60px">
      <img style="width: fit-content; height:fit-content" src="https://via.placeholder.com/100x150" class="rounded float-start" alt="...">
    </div>
    <div>
      <h4 class="mb-1">{{tweet.user.username}}</h4>
      <p class="m-0">{{tweet.body}}</p>
    </div>
  </div>
  <div class="d-flex align-items-center" style="margin-left: 60px;">
    {{#isOwner currentUser=currentUser tweetOwnerId=tweet.user.id}}
      <form class="m-0" action="/tweets/{{tweet.id}}/delete" method="POST">
        <button class="btn text-danger" type="submit">
          <i class="bi bi-trash3-fill"></i>
        </button>
      </form>
    {{/isOwner}}
    <button class="like-btn btn text-primary" type="button" value="{{tweet.id}}">
      <span>{{tweet.likes.length}}</span>
      {{#hasLike currentUser=currentUser tweet=tweet}}
        <i class="bi bi-heart-fill"></i>
      {{else}}
        <i class="bi bi-heart"></i>
      {{/hasLike}}
    </button>
  </div>
</div>